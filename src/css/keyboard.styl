.kb-input-highlight
  border: 1px solid #ccc !important
  box-shadow: 0 0 5px #ccc

    
.kb-ctner
  position: fixed
  bottom: 0px
  width: 100%
  text-align: center
  background-color: #D1D5DB
  padding: 0
  display: none
  bottom: -100%
  -webkit-touch-callout: none;
  user-select: none;

  
  
  &.active
    display: block;
    z-index: 10000;
    bottom: 0%;
    animation: slideUp 0.5s cubic-bezier(0.42, -0.05, 0.29, 0.91);


  ul
      margin: 0
      padding: 0

  li
    margin: 8px 0
    list-style: none

  li:last-child
    margin-bottom: 2px

  button
    display: inline-block
    margin: 0 0.2%
    width: 8.3%
    padding: 0.42em 0em
    text-align: center
    font-size: 1.3em
    border-radius: 4px
    background-color: #fff
    border: none
    border-bottom: 1px solid #888A8E
    outline: none
    height: 42px
    &.func
      background-color: #ACB3BE
      text-indent: 1000px
      overflow: hidden
      width: 11%
      &:active
        background-color: #fff
      &.active
        background-color: #fff
        &:active
            background-color: #ACB3BE

    &.space
      width: 44%
      font-size: 15px
      line-height: 2.2em

    &.enter
      width: 17%
      text-indent: 0
      font-size: 15px
      line-height: 2.3em

    &:active
      background-color: #A8B1BA

  .pull-left
    float: left
    margin-left: 2%

  .pull-right
    float: right
    margin-right: 2%

@keyframes slideUp {
    from {
        bottom: -100%
    }
    to {
        bottom: 0% 
    }
}


